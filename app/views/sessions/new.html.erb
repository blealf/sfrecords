<%= render '/layouts/front_main' %>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      
		<h1 class="top_form">Login</h1>
		<%= form_for(:session, url: login_path) do |f| %>
			<%#= render 'shared/error_messages' %>
			<div class="field">
			  <%= f.label :value, "email or username" %>
			  <%= f.text_field :value, class: 'form-control' %>
			</div>

			<div class="field">
			  <%= f.label :password, 'Password: ' %>
			  <%= f.password_field :password, class: 'form-control' %>
			</div>

			<div class="form-group actions">
			  <p></p>
			  <%= f.submit 'Login', :class => 'form-control btn btn-primary' %>
			  <p></p>
			  <p>Need an Account? <%= link_to 'Sign Up Here!', signup_path, :class => 'btn btn-default' %></p>
			</div>
		<% end %>
    </div>
  </div>
</div>