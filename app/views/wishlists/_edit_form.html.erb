<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      <%= bootstrap_form_for(@wishlist) do |f| %>
        <% if @wishlist.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@wishlist.errors.count, "error") %> prohibited this wishlist from being saved:</h2>

            <ul>
            <% @wishlist.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.text_field :itemname, class: "butn" %>
        </div>

        <div class="field">
          <%= f.text_field :storename, class: "butn" %>
        </div>

        <div class="field">
          <%= f.text_field :comment, class: "butn" %>
        </div>

        <div class="field">
          <%= f.text_field :itemcost, class: "butn" %>
        </div>

        <div class="field">
          <%= f.number_field :quantity, class: "butn" %>
        </div>

        <div class="field">
          <%# if defined?(@categories) %>
          <%= f.select :category, UserItem.category, {:include_blank => "Category"}, class: "col-sm-12 form-control butn" %>
          <% #end %>
        </div>

        <div class="field">
          <%= f.label :status%><br />
          <div class="row">
            <div class="col-xs-3 col-sm-2 col-md-1">
              <%= f.label :status, "Yes", :value => true , :class => 'radio-inline' %>
            </div>
            <div class="col-xs-3 col-sm-2 col-md-1">
              <%= f.radio_button :status, true, :class => 'radio' %>
            </div>
            <div class="col-xs-3 col-sm-2 col-md-1">
              <%= f.label :status, "No", :value => false, :class => 'radio-inline' %>
            </div>
            <div class="col-xs-3 col-sm-2 col-md-1">
              <%= f.radio_button :status, false, :class => 'radio' %>
            </div>
          </div>
        </div>

        <div class="actions col-sm-offset-4 col-md-8">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
 </div> 
