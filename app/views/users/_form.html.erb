<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      

      <%= form_for(user) do |f| %>
        <% if user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :firstname %>
          <%= f.text_field :firstname, class: 'form-control butn' %>
        </div>

        <div class="field">
          <%= f.label :lastname %>
          <%= f.text_field :lastname, class: 'form-control butn' %>
        </div>

        <div class="field">
          <%= f.label :othernames %>
          <%= f.text_field :othernames, class: 'form-control butn' %>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control butn' %>
        </div>

        <div class="field">
          <%= f.label :occupation %>
          <%= f.text_field :occupation, class: 'form-control butn' %>
        </div>

        <div class="field">
        <p></p>
          <%= f.label :date_of_birth %>
            <%#= f.date_select :date_of_birth, :end_year => 1900, :required => true %>
            <%= f.text_field :date_of_birth, class: 'form-control date_picker_1 butn' %>
            <%#= date_select :user, :date_of_birth, 
               {
                :order => [:day, :month, :year], 
                :start_year => 1920, 
                :end_year => 2013
               }, 
               {:class => "date_picker_1"}  %>
        </div>
        <%#:as => :date, :start_year => Date.today.year - 12,
            :end_year => 1900, :order => [ :year, :month, :day], :required => true, %>

        <div class="field">
          <%= f.label :username %>
          <%= f.text_field :username, class: 'form-control butn' %>
        </div>

        <div class="field">
          <%= f.label :password, 'Password: ' %>
          <%= f.password_field :password, class: 'form-control butn' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, 'Confirm: ' %>
          <%= f.password_field :password_confirmation, class: 'form-control butn' %>
        </div>

        <div class="field">
          <%= f.label :unit, 'Currency Unit: ' %>
          <%= f.select :unit, User.unit, class: "col-sm-12 form-control dropdown-toogle btn butn " %>
        </div>

        <div class="form-group actions">
          <p></p>
          <%= f.submit :class => 'form-control btn btn-primary' %>
          <p></p>
          <p>Have an account? <%= link_to 'Login Here!', login_path, class: "btn btn-default" %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

