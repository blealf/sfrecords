
<div class="container-fluid">

  <div class="budget" >
    <h2 class="text_h2">
      <strong> Title: </strong> <%= @budget.title %>
    </h2>


    <p>
      <strong>Description:</strong>
      <%= @budget.description %>
    </p>

    <p>
      <strong>Income:</strong>
      <%= number_to_currency(@budget.income, unit: current_user.unit + " ", precision: 2)%>
    </p>

    <p>
      <strong>Spending:</strong>
      <%= number_to_currency(@budget.spending, unit: current_user.unit + " ", precision: 2) %>
    </p>

    <p>
      <strong>Saving:</strong>
      <%= number_to_currency(@budget.saving, unit: current_user.unit + " ", precision: 2) %>
    </p>

  </div>
  <hr>
  <div class="cover">
    <div class="row">
      <div class="col-xs-6 coml-sm-6 col-md-6">
        <h3>Proposed Items</h3>
        <%= render 'proposed_item' %>
      </div>
      
      <div class="col-xs-6 coml-sm-6 col-md-6">
        <h3>proposed Income</h3>
        <%= render 'proposed_income' %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 coml-sm-6 col-md-7 table-responsive">
        <h3>Proposed Items</h3>
        <%= render 'proposed_items' %>
      </div>

      <div class="col-xs-12 coml-sm-6 col-md-5 table-responsive">
        <h3>proposed Income</h3>
        <%= render 'proposed_incomes' %>
      </div>
    </div>

    <%= link_to 'Back', new_budget_path, class: 'btn btn-lg btn-primary' %> |
    <%= link_to 'Edit', edit_budget_path(@budget), class: 'btn btn-lg btn-default' %>
  </div>
  
</div>