
<h3>Incomes</h3>

  <div class="dropdown btn btn-default">
    <a id="dLabel" data-target="#" href="http://example.com" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
    Period to show
    <span class="caret"></span>
    </a>

    <ul class="dropdown-menu" aria-labelledby="dLabel">
      <li><%= link_to "Day", :period => 1 %>  </li> 
      <li><%= link_to "Week", :period => 7 %> </li> 
      <li><%= link_to "Month", :period => 30 %> </li>
      <li><%= link_to "6 Months", :period => 180 %></li> 
      <li><%= link_to "Year", :period => 365 %></li>
    </ul>
  </div>

<table class="table table-striped table-hover table-responsive" >
  <thead>
    <tr>
      <th>Job</th>
      <th>Pay</th>
      <th>Earned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.job %></td>
        <td><%= income.pay %></td>
        <td><%= income.created_at.strftime("%d-%m-%Y") %></td>
        <td><%= link_to 'Edit', edit_income_path(income), class: "btn btn-primary"  %></td>
        <td><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" data-whatever="<%= income.id %>">Delete</button></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">New message</h4>
      </div>
      <div class="modal-body">
        <p>Delete this item? </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <a href=""></a>
        <%#= link_to 'Remove', { action: :destroy, id: 5}, method: :delete, class: "btn btn-danger btn_delete" %> 
      </div>
    </div>
  </div>
</div>

