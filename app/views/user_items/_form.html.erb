
<div class="container-fluid">
  <%= bootstrap_form_for(@user_item) do |f| %>
    <% if @user_item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user_item.errors.count, "error") %> prohibited this user_item from being saved:</h2>

        <ul>
        <% @user_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_field :itemname, label: "Item Name", class: "col-sm-12 form-control butn" %>
    </div>

    <div class="field">
      <%= f.text_field :storename, label: "Store Name", class: "col-sm-12 form-control butn" %>
    </div>


    <div class="field">
      <%= f.text_field :shortdescription, label: "Comment (optional)", class: "col-sm-12 form-control butn" %>
    </div>

    <div class="field">
      <%= f.text_field :itemcost, label: "Cost", class: "col-sm-12 form-control butn" %>
      </div>

    <div class="field">
      <%= f.number_field :quantity, class: "col-sm-12 form-control butn" %>
    </div>

    <div class="field">
      <%# if defined?(@categories) %>
      <%= f.select :category, UserItem.category, {:include_blank => "Category"}, class: "col-sm-12 form-control butn" %>
      <% #end %>
    </div>

    <div class="actions">
      <p>.</p>
      <div class="col-sm-offset-4 col-md-8">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>
 <% end %>
</div>