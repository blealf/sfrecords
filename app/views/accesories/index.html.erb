
<div class="container-fluid cover ">
  <h2 class="text_h2">Accesories</h2>
  <%= link_to 'New Accesory', new_accesory_path, class: "btn btn-primary" %>
  <hr>
  <div class="table-responsive">
    <table class="table table-striped table-hover accesory">
      <thead>
        <tr>
          <th>Title</th>
          <th>Type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @accesories.each do |accesory| %>
          <tr>
            <td><%= accesory.title %></td>
            <td><%= accesory.acc_type %></td>
            <td><%= link_to 'Show', accesory, class: 'btn btn-default' %></td>
            <td><%= link_to 'Edit', edit_accesory_path(accesory), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Destroy', accesory, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>


</div>
